@model IEnumerable<AgendaMVC.Models.Contato>
@{
    ViewData["Title"] = "Planilha";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<p>
    <a asp-action="Create">Create new</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contato in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => contato.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contato.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contato.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contato.Telefone)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = contato.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = contato.Id }) |
                    @Html.ActionLink("Deletar", "Deletar1", new { id = contato.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
